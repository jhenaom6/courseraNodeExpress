extends ../layout

block content

    a.btn.btn-success(href='/usuarios/create') Crear nuevo Usuario

    table.table
        thead
            tr
                th(scope = 'col') Nombre
                th(scope = 'col') Email
                th(scope = 'col') Verificado
                th(scope = 'col') 
                th(scope = 'col') 
        tbody
          each usuario in usuarios
            tr
                td= usuario.nombre
                td= usuario.email
                td= usuario.verificado ? 'SI' : 'NO'
                td 
                    a.btn(href='usuarios/'+usuario.id+'/update') Editar
                td
                    form(action=`/usuarios/${usuario.id}/delete` method='post')
                        input(type='hidden' name='id' value= usuario.id)
                        button.btn.btn-danger(type='submit') Eliminar
