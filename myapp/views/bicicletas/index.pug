extends ../layout

block content

    a(href='/bicicletas/create') Crear nueva Bicicleta

    table.table
        thead
            tr
                th(scope = 'col') #
                th(scope = 'col') Color
                th(scope = 'col') Modelo
                th(scope = 'col') Ubicacion
                th(scope = 'col') 
                th(scope = 'col') 
        tbody
          each bici in bicis
            tr
                td(scope='row')= bici.id
                td(scope='row')= bici.color
                td(scope='row')= bici.modelo
                td(scope='row')= bici.ubicacion
                td 
                    a(href='bicicletas/'+bici.id+'/update') Editar
                td
                    form.inline(method='post' action='bicicletas/'+bici.id+'/delete')
                        input(type='hidden' name='ID' value= bici.id)
                        button.btn.btn-danger(type='submit') Eliminar
